{
	"extends": "stylelint-config-standard-scss",
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": null,
		"order/order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			"rules",
			"at-rules"
		],
		"order/properties-alphabetical-order": true
	},
	"ignoreFiles": [
		"assets/css/*.scss",
		"**/*.html"
	]
}
